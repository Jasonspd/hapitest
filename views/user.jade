extend layouts/default

block content

		include includes/navbar
		.container
			.col-md-12
				h1 Welcome #{user.username}
				br
			.col-md-12
				form.form-horizontal(role='form' action='/user' method='POST')
					.form-group
						label.control-label.col-sm-2(for='firstName') First Name:
						.col-sm-4
							input.form-control(name='firstName' type='text' value='#{user.firstName}')
					.form-group
						label.control-label.col-sm-2(for='lastName') Last Name:
						.col-sm-4
							input.form-control(name='lastName' type='text' value='#{user.lastName}')
					.form-group
						label.control-label.col-sm-2(for='email') Email:
						.col-sm-4
							input.form-control(name='email' type='text' value='#{user.email}' required)
					.form-group
						input.btn.btn-primary(type='submit' value='Save changes')